<%- include("./partials/header") %>

  <div class="container-fluid px-0">
    <section class="product">
      <div class="container px-5">
        <div class="d-flex justify-content-center">
          <div class="row">
              <div class="col-md-5 d-flex justify-content-center">
                
                  <div class="product-pic" >
                      <div class="d-flex justify-content-center">
                          <img id="zoom_03"  src="<%= product.productImage %>" class="" alt="..." > 
                        </div>
                    
                  </div>
                
              </div>
              <div class="col-md-7 d-flex justify-content-center">
                  <div class="info">
                    <h2 class="py-2"><%= product.productName %></h2>
                    <p class="price_5 py-2">$100.<span class="cent">00</span></p>
                    <div class="description">
                        <p class="text-muted">
                          <%= product.productDescription%>
                        </p>
                    </div>
                    <div class="variety">
                        <div class="size">
                            <a href="" class="box mr-2"><span class="sizes p-2">S</span></a>
                            <a href="" class="box mx-2"><span class="sizes p-2">M</span></a>
                            <a href="" class="box mx-2"><span class="sizes p-2">L</span></a>
                        </div>
                    </div>
                    <div class="edit-quantity pt-5 row">
                        <div class="col-sm-4">
                          <span class="plus px-2"><i class="fas fa-plus"></i></span>
                          <span class="display-quantity px-2">1</span>
                          <span class="minus px-2"><i class="fas fa-minus"></i></span>
                        </div>
                        <div class="col-sm-8 pt-4 pt-sm-0 p-sm-0">
                          <button class="btn add-to-cart px-5">Add to cart</button>
                        </div>
                    </div>
                    <div class="wishlist pt-4">
                        <span class="heart  mr-3"><i class="far fa-heart hrt "></i></span>
                        <span class="wishlist-text">Add to Wishlist</span>
                    </div>
                  </div>
              </div>
          
            </div>
        </div>
      </div>
    </section>

    <section class="review-and-info pt-5">
      <div class="container">
        <nav class="nav justify-content-center" id="tabs">
          <a class="nav-link active_1 specification" href="#tabs" id="specification-button">Specification</a>
          <a class="nav-link reviews" href="#rtabs" id="reviews-button">Reviews</a>
        </nav>

        <div class="display-content container">
          <div class="display" id="specification">
            <table>
              <tr class="">
                <td>Product</td>
                <td class="right-side">Purchase this product on our website</td>
              </tr>
              <tr>
                <td>Size and Fit</td>
                <td class="right-side">Splittable fabric, oversized coat</td>
              </tr>
              <tr>
                <td>Model</td>
                <td class="right-side">5'7.5" wearing a size small</td>
              </tr>
              <tr>
                <td>Composition</td>
                <td class="right-side">Wool blend, custom plaid, 70% Wool, 30% Polyamide</td>
              </tr>
              <tr>
                <td>Color</td>
                <td class="right-side">Blue, Red</td>
              </tr>
              <tr>
                <td>Size</td>
                <td class="right-side">S, M, L</td>
              </tr>
            </table>
          </div>

          <div class="remove" id="reviews">
            <h2 class="review-count my-5">5 reviews for this product</h2>
            <% reviews.forEach((review) => { %>
              <div class="review py-4">
                <div class="head d-flex justify-content-between mt-5">
                  <p>
                    <span class="name"><%= review.username %></span>
                    <span>-</span>
                    <span class="date"><%= review.commentDate %></5></span>
                  </p>
                  <p class="user-rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                  </p>
                </div>
                <div class="comment">
                  <%= review.comment %>
                </div>
              </div>
              <hr>

            <% }) %>
            

            <div class="add-review">
              <h2 class="my-4">Add a review</h2>
              <p class="text-muted my-4">Your email address will not be published. Required fields are marked *</p>

              <form action="" method="POST">
                <label>YOUR RATING</label>
              <div class="stars">
                <span class="star 1"><i class="far fa-star"></i></span>
                <span class="star 2"><i class="far fa-star"></i></span>
                <span class="star 3"><i class="far fa-star"></i></span>
                <span class="star 4"><i class="far fa-star"></i></span>
                <span class="star 5"><i class="far fa-star"></i></span>
              </div>

              <div class="form-group my-5">
                <label>YOUR REVIEW *</label>
                <textarea name="review" class="form-control" cols="80" rows="10" required></textarea>
              </div>

              <div class="form-group my-5">
                <label>Name *</label>
                <input type="text" name="name" class="form-control" required>
              </div>

              <div class="form-group my-5">
                <label>Email *</label>
                <input type="email" name="email" class="form-control" required>
              </div>

              <div class="form-group my-5">
                <input type="submit" class="btn">
              </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>



  <%- include("./partials/pageFooter") %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
    <script type="text/javascript" src="https://cdn.rawgit.com/igorlino/elevatezoom-plus/1.1.6/src/jquery.ez-plus.js"></script>
    <script src="/js/productpage.js"></script>
    
    <%- include("./partials/footer") %>

