<%- include("./partials/header") %>


  <section id="home">
    <div class="masthead">
      <div class="container h-100">
        <div class="row hidden h-100 align-items-center justify-content-center text-center cover-container">
          <div class="col-lg-10 align-self-end">
            <h1 class="text-uppercase text-white font-weight-bold animate__animated animate__fadeInDown">Welcome to ...Company Name</h1>
            <hr class="divider my-4" />
          </div>
          <div class="col-lg-8 align-self-baseline">
            <p class="text-white-75 color-light font-weight-light mb-5 animate__animated animate__fadeInDown">This is where our Tagline goes!</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="arrow bounce">
    <a class="fa fa-arrow-down fa-2x" href="#home" style="transform: rotate(180deg);"></a>
  </div>

  <div class="container-fluid" id="product">    
    <section class="explore-products">
      <h1 class="text-center pt-5">Explore Company name Products</h1>
      <p class="text-center pt-3 text-secondary">Explore the collection of our Products.More to come soon!</p>
      <hr>
      <div class="row hidden my-5 ">
        <% products.forEach((product) => { %>
          <div class="col-lg-3 col-sm-6">
            <div class="d-flex justify-content-center">
            <div class="card card_2 my-4">
              <span class="actions pt-2 px-2 d-flex justify-content-between">
                <button data-toggle="tooltip" data-placement="bottom" title="Add to Wishlist" class="rounded-circle px-1 d-flex justify-content-center align-items-center">
                  <i class="far fa-heart"></i>
                </button>
              </span>
              <a href="#">
                  <img src="<%= product.productImage%>" class="card-img-top" alt="...">
              </a>
              <div class="card-body">
                <h5 class="card-title m-0"><%=product.productCategory %></h5>
                <a href="#" class="product-link">
                <p class="card-text"><%= product.productName%></p>
                </a>
                <div class="price-rating d-flex justify-content-between">
                  <p class="dollar">$100.<span class="cent">00</span></p>
                  <p class="rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                  </p>
                </div>
              </div>
              <div class="hidden-tab d-none d-lg-block pb-2 container-fluid col-12 d-flex flex-column align-items-center">
                <div class="hidden-content d-flex justify-content-center">
                  <a href="/login" data-toggle="tooltip" data-placement="bottom" title="Add to Cart" class="btn btn_1 btn-primary  hidden-button p-1 d-flex justify-content-center align-items-center rounded-circle mx-3 cart"><i class="fas fa-shopping-cart "></i></a>
                  <a href="<%= product.productImage%>" data-toggle="tooltip" data-placement="bottom" title="View Product" class="btn btn_2 btn-primary  hidden-button p-1 d-flex justify-content-center align-items-center rounded-circle mx-3 eye pop-up"><i class="fas fa-eye "></i></a>
                </div>
              </div>
            </div>
          </div>
          </div>
        <% }) %>    
      </div>
    </section>
  </div>
  <footer id="footer">
    <div class="mt-5 p-4 w-100">


      <div class="row">

        <div class="col-lg-4 col-md-6 col-sm-12 catalogue">
          <div class="d-flex justify-content-center">
            <div class="size">
              <div class="text-left">



                <h5>Shop Departments</h5>
                <br>
                <p>Appliances</p>
                <p>Comapny Approval</p>
                <p>Buisness Product</p>
                <p>Computer</p>
                <p>Television</p>
                <p>Shorts</p>
                <p>Laptops</p>
                <p>Accessories</p>
                <p>Refridgerator</p>
                <p>Apple Appliances</p>
                <p>Electonical Appliances</p>



              </div>
            </div>


          </div>



          <hr>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 shipping">
          <div class="d-flex justify-content-center">
            <div class="size">
              <div class="text-left">
                <h5>Accounts and Shipping Info</h5>
                <br>
                <p>Your Account</p>
                <p>Shipping rates & policies</p>
                <p>Refunds and Replacements</p>
                <p>Order Tracking</p>
                <p>Delivery Info</p>
                <p>Taxes &Fees</p>
                <br>

                <h5>About Us</h5>
                <br>
                <p>About Company</p>
                <p>Our Teams</p>
                <p>Careers</p>
                <p>News</p>

              </div>

            </div>


          </div>

          <hr>
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12 subscribe">
          <div class="d-flex justify-content-center ">
            <div class="text-left">
              <h5>Stay Informed</h5>
              <br>
              <form class="" action="/" method="post">


                <input type="email" class="form-control" placeholder="Enter email" id="email" name="subscribe_mail" >
                <small>*If you want to be informed about our new Product.</small>

                <div class="float-right">
                  <button type="submit" name="button" class="m-1 rounded sub_button">Subscribe</button>

                </div>

              </form>
              <div class="connect" id="connect">
                <br>
                <h5 class="mt-5 text-center">Connect with Us</h5>

                <a href="mailto:comapny@example.com" class="mt-3">Mail us</a><br>
                <div class="d-flex justify-content-center icon mb-3">
                  <i class="fab fa-google feather "></i>
                  <i class="fab fa-twitter feather  ml-5"></i>
                  <i class="fab fa-facebook feather  ml-5"></i>
                </div>
                <p class="text-center mt-4">&copy; Company Name Ltd<p>



              </div>


            </div>





          </div>

        </div>

      </div>
      <hr>
      <div class="row mt-4 policy">
        <div class="col-lg-3 col-md-4 col-sm-12">
          <div class="justify-content-center">
            <span><i class="fas fa-rocket "></i></span>
            <div class=" shape_1">
              <div class="text-right">

                <h6>Free and Fast Delivery</h6>
                <small>Free Delivery for cart above 200$</small>
              </div>

            </div>


          </div>
          <hr>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-12">
          <div class="justify-content-center">
            <span><i class="fas fa-money-check-alt"></i></span>



            <div class=" shape_2">
              <div class="text-right">

                <h6>Money Back Policy</h6>
                <small>We refund payments within 30days</small>
              </div>

            </div>


            <hr>
          </div>

        </div>
        <div class="col-lg-3 col-md-4 col-sm-12">
          <div class="justify-content-center">
            <div class=" shape">
              <i class="far fa-credit-card"></i>
            </div>

            <div class=" shape_3">
              <div class="text-right">

                <h6>Secure Online Payment</h6>
                <small>Excellent online payment services.</small>
              </div>

            </div>


            <hr>
          </div>

        </div>
        <div class="col-lg-3 col-md-4 col-sm-12">
          <div class="justify-content-center">
            <div class="shape">
              <i class="fas fa-headphones-alt"></i>
            </div>

            <div class=" shape_4">
              <div class="text-right">

                <h6>24/7 customer support</h6>
