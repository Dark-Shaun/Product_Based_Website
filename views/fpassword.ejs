                <div class="container reset-page pt-4">
                    <h2 class="text-center mt-1 mb-4">Reset Password</h2>
                    <p>Lost your password? Please enter your email address. You will receive a link to create a new password.</p>
                    <div class="form-container">
                        <form action="">
                            <div class="form-group ">
                                <label class="label-animate"><i class="fas fa-envelope"></i> Email</label>
                                <div class="row">
                                    <div class="col-12 px-0">
                                        <input type="email" name="" class="form-control fontAwesome rounded" required placeholder="">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mt-4">
                                <div class="row">
                                    <div class="col-12 px-0">
                                        <button class="btn btn-primary btn-block reset-button">Reset</button>
                                    </div>
                                </div>
                            </div>
                            <p class="text-muted_1 back-to-login text-center mt-3 mb-0"><a href='/login' class='text-muted_1'>Back to login</a></p>
                        </form>
                    </div>

                </div>
            </div>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
